<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.CompteActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Création de mon compte"
        android:textColor="@color/color_2"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999" />

    <EditText
        android:id="@+id/nom_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nom"
        android:paddingHorizontal="8dp"
        android:textColorHint="@color/color_2"
        android:backgroundTint="@color/color_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/prenom_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Prénom"
        android:paddingHorizontal="8dp"
        android:textColorHint="@color/color_2"
        android:backgroundTint="@color/color_1"
        app:layout_constraintEnd_toEndOf="@+id/nom_et"
        app:layout_constraintStart_toStartOf="@+id/nom_et"
        app:layout_constraintTop_toBottomOf="@+id/nom_et" />

    <EditText
        android:id="@+id/tel_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Téléphone"
        android:paddingHorizontal="8dp"
        android:textColorHint="@color/color_2"
        android:backgroundTint="@color/color_1"
        app:layout_constraintEnd_toEndOf="@+id/prenom_et"
        app:layout_constraintStart_toStartOf="@+id/prenom_et"
        app:layout_constraintTop_toBottomOf="@+id/prenom_et" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:paddingHorizontal="8dp"
        android:textColorHint="@color/color_2"
        android:backgroundTint="@color/color_1"
        app:layout_constraintEnd_toEndOf="@+id/tel_et"
        app:layout_constraintStart_toStartOf="@+id/tel_et"
        app:layout_constraintTop_toBottomOf="@+id/tel_et" />

    <EditText
        android:id="@+id/mdp_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Mot de passe"
        android:paddingHorizontal="8dp"
        android:textColorHint="@color/color_2"
        android:backgroundTint="@color/color_1"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_et"
        app:layout_constraintStart_toStartOf="@+id/email_et"
        app:layout_constraintTop_toBottomOf="@+id/email_et" />

    <Button
        android:id="@+id/valider_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Valider"
        app:layout_constraintEnd_toEndOf="@+id/mdp_et"
        app:layout_constraintTop_toBottomOf="@+id/mdp_et" />
</androidx.constraintlayout.widget.ConstraintLayout>